<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_color">

    <TextView
        android:id="@+id/dialog_confirm_reboot_title"
        android:text="@string/feedback_confirm_change_theme"
        android:textStyle="bold"
        android:textColor="@color/colorAccent_light"
        android:textSize="@dimen/design_title_text_size"
        android:layout_margin="@dimen/normal_margin"
        style="@style/title_text" />

    <TextView
        android:id="@+id/dialog_confirm_reboot_content"
        android:text="@string/feedback_change_theme_warning"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_marginLeft="@dimen/mini_icon_size"
        android:layout_marginRight="@dimen/mini_icon_size"
        android:layout_below="@id/dialog_confirm_reboot_title"
        style="@style/content_text" />

    <Button
        android:id="@+id/dialog_confirm_reboot_enterBtn"
        android:text="@string/ok"
        android:textColor="@color/colorPrimary_light"
        android:layout_alignParentRight="true"
        android:layout_below="@id/dialog_confirm_reboot_content"
        style="@style/material_button"
        tools:ignore="RtlHardcoded" />

    <Button
        android:id="@+id/dialog_confirm_reboot_cancelBtn"
        android:text="@string/cancel"
        android:layout_below="@id/dialog_confirm_reboot_content"
        android:layout_toLeftOf="@id/dialog_confirm_reboot_enterBtn"
        style="@style/material_button"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>