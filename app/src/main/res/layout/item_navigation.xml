<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/item_navigation_icon"
        android:layout_centerVertical="true"
        style="@style/material_icon"
        tools:src="@drawable/ic_mountain_light"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/item_navigation_text"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_navigation_icon"
        android:layout_margin="@dimen/little_margin"
        android:layout_width="wrap_content"
        style="@style/content_text"
        tools:text="Home"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>