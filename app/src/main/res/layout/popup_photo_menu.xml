<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/root_color">

    <RelativeLayout
        android:id="@+id/popup_photo_menu_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_photo_menu_statsIcon"
            android:src="@drawable/ic_stats_light"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_photo_menu_statsTxt"
            android:text="@string/stats"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_photo_menu_statsIcon"
            android:layout_width="wrap_content"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_photo_menu_downloadPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_photo_menu_downloadPageIcon"
            android:src="@drawable/ic_landscape_light_24dp"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_photo_menu_downloadPageTxt"
            android:text="@string/open_download_link"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_photo_menu_downloadPageIcon"
            android:layout_width="wrap_content"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_photo_menu_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_photo_menu_browserIcon"
            android:src="@drawable/ic_earth_light1"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_photo_menu_browserTxt"
            android:text="@string/open_photo_link"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_photo_menu_browserIcon"
            android:layout_width="wrap_content"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>


</LinearLayout>