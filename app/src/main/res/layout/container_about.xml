<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/container_about_appIcon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/normal_margin"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_launcher"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/container_about_appName"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/container_about_appIcon"
                android:layout_marginTop="@dimen/normal_margin"
                android:layout_marginBottom="@dimen/mini_margin"
                style="@style/title_text" />

            <TextView
                android:id="@+id/container_about_versionCode"
                android:text="@string/version_code"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/container_about_appName"
                android:layout_marginBottom="@dimen/normal_margin"
                android:layout_width="wrap_content"
                style="@style/subtitle_text" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/container_about_backButton"
            android:src="@drawable/ic_toolbar_back_light"
            style="@style/material_image_button"
            tools:ignore="ContentDescription" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/line_color" />

    <TextView
        android:text="@string/about_app"
        android:textStyle="bold"
        android:layout_margin="@dimen/normal_margin"
        style="@style/subtitle_text"
        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:id="@+id/container_about_gitHubContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/container_about_gitHubIcon"
            android:src="@drawable/ic_github_light"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="@string/gitHub"
            android:textStyle="bold"
            android:layout_toRightOf="@id/container_about_gitHubIcon"
            android:layout_centerVertical="true"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_emailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/container_about_emailIcon"
            android:src="@drawable/ic_email_light"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="@string/email"
            android:textStyle="bold"
            android:layout_toRightOf="@id/container_about_emailIcon"
            android:layout_centerVertical="true"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_sourceCodeContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/container_about_sourceCodeIcon"
            android:src="@drawable/ic_android_studio_light"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="@string/source_code"
            android:textStyle="bold"
            android:layout_toRightOf="@id/container_about_sourceCodeIcon"
            android:layout_centerVertical="true"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/line_color" />

    <TextView
        android:text="@string/thx"
        android:textStyle="bold"
        android:layout_margin="@dimen/normal_margin"
        style="@style/subtitle_text"
        tools:ignore="RtlHardcoded" />

    <RelativeLayout
        android:id="@+id/container_about_unsplashContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_unsplashTitle"
            android:text="@string/unsplash"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_unsplashContent"
            android:text="@string/about_unsplash"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_unsplashTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_retrofitContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_retrofitTitle"
            android:text="@string/retrofit"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_retrofitContent"
            android:text="@string/about_retrofit"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_retrofitTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_glideContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_glideTitle"
            android:text="@string/glide"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_glideContent"
            android:text="@string/about_glide"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_glideTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_cpvContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_cpvTitle"
            android:text="@string/circular_progress_view"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_cpvContent"
            android:text="@string/about_circular_progress_view"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_cpvTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_civContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_civTitle"
            android:text="@string/circle_image_view"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_civContent"
            android:text="@string/about_circle_image_view"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_civTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_downloaderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_downloaderTitle"
            android:text="@string/downloader"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_downloaderContent"
            android:text="@string/about_downloader"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_downloaderTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_about_tagContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/container_about_tagTitle"
            android:text="@string/tagLayout"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            style="@style/content_text"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/container_about_tagContent"
            android:text="@string/about_tagLayout"
            android:lineSpacingMultiplier="1.3"
            android:layout_below="@id/container_about_tagTitle"
            android:layout_marginTop="@dimen/mini_margin"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            style="@style/subtitle_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</LinearLayout>