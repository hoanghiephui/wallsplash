<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/root_color">

    <RelativeLayout
        android:id="@+id/popup_collection_type_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_collection_type_allIcon"
            android:src="@drawable/ic_select_all_grey_600_24dp"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_collection_type_allTxt"
            android:text="All"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_collection_type_allIcon"
            android:layout_width="wrap_content"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_collection_type_curated"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_collection_type_curatedIcon"
            android:src="@drawable/ic_select_all_grey_600_24dp"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_collection_type_curatedTxt"
            android:text="Curated"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_collection_type_curatedIcon"
            android:layout_width="wrap_content"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_collection_type_featured"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_collection_type_featuredIcon"
            android:src="@drawable/ic_featured"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_collection_type_featuredTxt"
            android:text="Featured"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/popup_collection_type_featuredIcon"
            android:layout_width="wrap_content"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

</LinearLayout>