<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_download_card"
    android:layout_width="match_parent"
    android:layout_height="@dimen/design_icon_size"
    android:layout_marginLeft="@dimen/little_margin"
    android:layout_marginRight="@dimen/little_margin"
    android:layout_marginBottom="@dimen/little_margin"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise"
    app:cardBackgroundColor="@android:color/black"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="true"
    tools:ignore="UnusedAttribute">

    <ImageView
        android:id="@+id/item_download_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="0.9"
        tools:src="@drawable/bg_blur"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/item_download_cancelBtn"
            android:src="@drawable/ic_item_close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="@dimen/little_margin"
            android:layout_marginRight="@dimen/little_margin"
            android:layout_marginBottom="@dimen/little_margin"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <ImageButton
            android:id="@+id/item_download_retryBtn"
            android:src="@drawable/ic_item_retry"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:padding="@dimen/little_margin"
            android:layout_marginBottom="@dimen/little_margin"
            android:background="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_download_cancelBtn"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <TextView
            android:id="@+id/item_download_title"
            android:textColor="@android:color/white"
            android:singleLine="true"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:layout_marginLeft="@dimen/normal_margin"
            android:layout_marginRight="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_download_retryBtn"
            android:layout_alignParentLeft="true"
            style="@style/title_text"
            tools:text="30adf9f8sla98fgs : 92%"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

</android.support.v7.widget.CardView>